<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Materials">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Select your Stream:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="50dp"/>
    <GridLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:rowCount="3"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:columnCount="3">

        <ImageView
            android:layout_width="@dimen/cardview_compat_inset_shadow"
            android:layout_height="@dimen/cardview_compat_inset_shadow"
            android:text="CSE"
            android:src="@drawable/cse1"
            android:layout_row="0"
            android:id="@+id/cse"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
           />

        <ImageView
            android:layout_width="@dimen/cardview_compat_inset_shadow"
            android:layout_height="@dimen/cardview_compat_inset_shadow"
            android:text="ECE"
            android:src="@drawable/ece"
            android:id="@+id/ece"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"/>

        <ImageView
            android:layout_width="@dimen/cardview_compat_inset_shadow"
            android:layout_height="@dimen/cardview_compat_inset_shadow"
            android:text="EEE"
            android:id="@+id/eee"
            android:src="@drawable/eee"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"/>
        <ImageView
            android:layout_width="@dimen/cardview_compat_inset_shadow"
            android:layout_height="@dimen/cardview_compat_inset_shadow"
            android:text="CIVIL"
            android:id="@+id/civil"
            android:layout_row="1"
            android:src="@drawable/civil"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"/>
        <ImageView
            android:layout_width="@dimen/cardview_compat_inset_shadow"
            android:layout_height="@dimen/cardview_compat_inset_shadow"
            android:text="MECH"
            android:id="@+id/mech"
            android:src="@drawable/mech1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"/>

</GridLayout>

</FrameLayout>